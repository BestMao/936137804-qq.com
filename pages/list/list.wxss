/* pages/list/list.wxss */
.header {
  height: 60rpx;
  width: 100%;
  background-color: #ccc;
  padding: 20rpx 0;
}
.header input {
  background-color: #fff;
  height: 60rpx;
  width: 90%;
  margin: auto;
  border-radius: 10rpx;
  padding-left: 15rpx;
}
.body .item {
  display: flex;
  border-bottom: 1px solid #ccc;
  padding:10rpx ;
}
.body .item image {
  width: 120rpx;
  height: 120rpx;
  margin: auto auto;
}
.body .item .info {
  display: flex;
  flex: 1;
  margin-left: 10rpx;
  flex-direction: column;
  font-size: 26rpx;
}
.body .item .comment {
  background-color: red;
  height: 100%;
  color: #fff;
  font-size: 26rpx;
  margin: 20rpx;
  padding: 0 10rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.data-loading {
  height: 100rpx;
  background-color: #ccc;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
}